#!/usr/bin/env bash

shopt -s extglob

# Load up the clipboard
clip() { 
  printf '%s\n' "$1" | xcmenu -ic 
}

# Workaround until we have a filesystem based browser
fetch() {
  local tmp
  if [[ -f "$1" ]]; then
    tmp="$1" 
  else 
    tmp=$(mktemp)
    curl -Ls "$1" -o "$tmp"
  fi
  printf '%b\n' "$tmp"
}


# Fire off the action
handle() {
  local input
  while read -r input; do
    case "$input" in
      browse) exec browse               "$1" & 
              exit 0 ;;
      play)   exec play                 "$(fetch "$1")" & 
              exit 0 ;;
      view)   exec imv                  "$(fetch "$1")" & 
              exit 0 ;;
      docs)   exec zathura              "$(fetch "$1")" & 
              exit 0 ;;
      edit)   exec edit                 "$(fetch "$1")" & 
              exit 0 ;;
      hear)   mpv "$1" &
              exit 0 ;;
      man)    exec "$XDG_DATA_HOME"/dsearch/man "$1" &
              exit 0 ;;
    esac
  done
}

# Special cases demand special handling
special() {
  case "$1" in
    *xkcd*) clip "$1" && handle view "$(curl -s "https://xkcd.com/${1//[^0-9]/}/" | awk '/hotlink/{ print $NF }')" 
            exit 0 ;;  
    *youtube.com/watch*|*youtu.be*|*youtube.com/v/*|ytdl*|*livestream.com*|*twitch.tv*|*webm|*mkv|*gif*) clip "$1" && exec play "$1" && exit 0;;
    *ptpb.pw/t/*) clip "$1" && exec st -e asciinema play <(curl -s "${1/\/t/}") && exit 0;;
    *ptpb.pw/*/*) clip "$1" && echo "edit" | handle "${1%/*}" 
                  exit 0 ;;
    *bpaste.net*) clip "$1" && echo "edit" | handle "${1/show/raw}" 
                  exit 0 ;;
    gopher://*) clip "$1" && exec st -e cgo "$1" && exit 0 ;;
    *iotek*) clip "$1" && printf '%s\n' "browse" | handle "$1" && exit 0 ;; 
    *.mp3) clip "$1" && printf '%s\n' "hear" | handle "$1" && exit 0 ;;
  esac
} 

handle_online() {
    source "$XDG_CONFIG_HOME"/dmenu/dmenucolors
    opts+=(-p "Send to ddg with !bang:" -l 10)
    exec dsearch "$(printf '%s\n%s\n%s\n' "!g $1" "!die $1" "!man7 $1" | dmenu "${opts[@]}")"
}

# In testing, this outputs a correct mime
mime() {
  if [[ -f $1 ]]; then 
    file -bL --mime-type "$1"
  elif whatis "${1%\(*}" 2>/dev/null; then
    printf "man\n"
  else
    content-type "$1" || handle_online "$1"
    clip "$1"
  fi
}

# Match mimetype with action to be taken
parse() {
  local out
  out=$(awk -v r="$1" '$0 ~ r { print $2 }' "$XDG_DATA_HOME/plumber/${1%\/*}")
  [[ $out ]] && printf "$out\n" || printf "$1\n" >> ~/mime_issues
}

## Main

[[ $1 ]] && special "$1" || exit 0

while read -r mimetype; do
  case "$mimetype" in
    X-Arc*) parse "${mimetype%;*}" | handle "$1" ;;
    appli*) parse "${mimetype%;*}" | handle "$1" ;;
    video*) parse "${mimetype%;*}" | handle "$1" ;;
    audio*) parse "${mimetype%;*}" | handle "$1" ;;
    image*) parse "${mimetype%;*}" | handle "$1" ;;
    inode*) parse "${mimetype%;*}" | handle "$1" ;;
    text*)  parse "${mimetype%;*}" | handle "$1" ;;
    man)    printf "man\n"         | handle "$1" ;;
    *) printf '%s\n' "$mimetype" >> ~/mime_issues ;;
  esac
done < <(mime "$1")
