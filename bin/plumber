#!/usr/bin/env bash

if [[ -f "$1" ]]; then
  mime=$(file -biL "$1")
  [[ $mime ]] && case $mime in
    text*)
      exec nvim-run "$1" ;;
    *pdf*|*epub*|*djvu*)
      exec tzathura "$1" ;;
    image*)
      exec imv "$1"      ;;
    video*)
      exec mpv "$1"      ;;
    *)
      notify-send "Error with $1"
      exec nvim-run ~/local/bin/plumber ;;
  esac
fi

printf '%s' "$1" | xcmenu -ic

case "$1" in
    *youtube.com/watch*)            
      exec mpv-run "$1"                ;;
    *.pdf|*.djvu|*.epub)            
      curl -s "$1" > /tmp/tmp.book
      exec tzathura /tmp/tmp.book       ;;
    *youtu.be*|ytdl*|*livestream.com*)                     
      exec mpv-run "$1"                ;;
    *twitch*)                       
      exec mpv-run "$1"                ;;
    *.mkv|*.mp4|*.webm|*.mpg|*.ogg) 
      exec mpv-run "$1"                ;;
    *.gifv)                         
      exec mpv-run "${1::-4}webm"      ;;
    *.jpg*|*.png|*.jpeg|*.gif)      
      curl -s "$1" | imv -             ;;
    *.tar*)                         
      cd /tmp || exit 0
      curl -s "$1" | tar -xvz
      exec st                          ;;
    *xkcd*)
      curl -s "https://xkcd.com/${1//[^0-9]/}/" | awk '/hotlink/{ print $NF }' | xargs curl | exec imv - ;;
    *imgur*)                        
      curl -s http://i.imgur.com/"${1: -7}".png | exec imv - ;;
    http*)                          
      exec vimb-run "$1"               ;;
    *\(*)  
      if grep "${1%*\(*}" <<< "$(apropos .)"; then
        exec "$XDG_DATA_HOME"/dsearch/manual "${1%\(*}" 
      else
        exec vimb-run "!g $1"
      fi                               ;;
    *)
      if grep "$1" <<< "$(apropos .)"; then
        exec "$XDG_DATA_HOME"/dsearch/manual "$1"
      fi
      exec vimb-run "$1"            ;;
esac
