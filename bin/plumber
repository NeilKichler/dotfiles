#!/usr/bin/env bash

# In testing, this outputs a correct mime
mime() {
  if [[ -f $1 ]];then 
    file -bL --mime-type "$1"
  else
    printf '%s' "$input" | xcmenu -ic
    curl -sI "$1" | sed -n 's/content-type://p'
  fi
}

# Workaround until we have a filesystem based browser
grab() {
  local tmp
  tmp=$(mktemp)
  curl -s "$1" -o "$tmp"
  printf '%q\n' "$tmp"
}

# Presently redundant
handle() {
  case "$1" in
    browse) exec browse  $2 ;;
    watch)  exec watch   $(grab "$2") ;;
    view)   exec imv     $(grab "$2") ;;
    docs)   exec zathura $(grab "$2") ;;
    edit)   exec nvim    $(grab "$2") ;;
    hear)   exec mpd     $(grab "$2") ;;
  esac
}

handle_special() {
  case "$1" in
    *youtube.com/watch*|*youtu.be*|ytdl*) exec handle watch "$1" ;;
    *livestream.com*|*twitch.tv*|*imgur*) exec handle watch "$1" ;;
    *ptpb.pw/t/*) exec st -e asciinema play <(curl -s "${1/\/t/}") ;;
    gopher://*) exec st -e cgo "$1" ;;
    *xkcd*) handle view "$(curl -s "https://xkcd.com/${1//[^0-9]/}/" | awk '/hotlink/{ print $NF }')" ;;  
  esac
} 

handle_special "$1" 

case "$(mime "$1")" in
  application*) handle docs "$1" ;;
  video*) handle watch "$1" ;;
  audio*) handle hear "$1" ;;
  image*) handle view "$1" ;;
  inode*) handle view "$1" ;;
  text*) handle edit "$1" ;;
  *) handle browse "$1" ;;
esac
