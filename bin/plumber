#!/usr/bin/env bash

case "$1" in
    *youtube.com/user/*)   vimb-run "$1"                       ;;
    *youtu*)               mpv --input-file=/tmp/socket "$1"   ;;
    *twitch*)              mpv --input-file=/tmp/socket "$1"   ;;
    http*)                 vimb-run "$1"                       ;;
    *)                     notify-send "handle $1 plumber"
                           nvim-run "$1"                       ;;
esac
