#!/usr/bin/env bash

input="$1"
while read -r item; do
  input+="$item"
done

if [[ -f "$input" ]]; then
  mime=$(file -biL "$input")
  [[ $mime ]] && case $mime in
    text/html*)
      exec vimb-run "$input" ;;
    text*)
      exec nvim-run "$input" ;;
    *pdf*|*epub*|*djvu*)
      exec tzathura "$input" ;;
    image*)
      exec imv "$input"      ;;
    video*)
      exec mpv "$input"      ;;
    *)
      notify-send "Error with $input"
      exec nvim-run ~/local/bin/plumber ;;
  esac
fi

printf '%s' "$input" | xcmenu -ic

case "$input" in
    gopher://*)
      exec st -e cgo "$input"              ;;
    *youtube.com/watch*)            
      exec mpv-run "$input"                ;;
    *.pdf|*.djvu)            
      curl -s "$input" > /tmp/tmp.book
      exec tzathura /tmp/tmp.book      ;;
    *.epub)
      curl -s "$input" > /tmp/tmp.book
      pandoc /tmp/tmp.book -o /tmp/tmp.pdf
      exec tzathura /tmp/tmp.pdf       ;;
    *youtu.be*|ytdl*|*livestream.com*)                     
      exec mpv-run "$input"                ;;
    *twitch*)                       
      exec mpv-run "$input"                ;;
    *.mkv|*.mp4|*.webm|*.mpg|*.ogg) 
      exec mpv-run "$input"                ;;
    *.gifv)                         
      exec mpv-run "${input::-4}webm"      ;;
    *.jpg*|*.png|*.jpeg|*.gif)      
      curl -s "$input" | exec imv -             ;;
    *.tar*)                         
      cd /tmp || exit 0
      curl -s "$input" | tar -xvz
      exec st                          ;;
    *xkcd*)
      curl -s "https://xkcd.com/${input//[^0-9]/}/" | awk '/hotlink/{ print $NF }' | xargs curl | exec imv - ;;
    *imgur.com/gallery/*)
      exec mpv "$input"                         ;;
    *imgur*)                        
      curl -s http://i.imgur.com/"${input: -7}".png | exec imv - ;;
    http*)                          
      exec vimb-run "$input"               ;;
    *\(*)  
        exec "$XDG_DATA_HOME"/dsearch/manual "${input%\(*}"      ;;
    *)
      if grep "$input" <<< "$(apropos .)"; then
        exec "$XDG_DATA_HOME"/dsearch/manual "$input"
      fi
      exec vimb-run "!g $input"            ;;
esac
