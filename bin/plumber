#!/usr/bin/env bash

input="$1"
while read -r item; do
  input+="$item"
done

if [[ -f "$input" ]]; then
  mime=$(file -bL --mime-type "$input")
  [[ $mime ]] && case $mime in
    text/html*)
      exec browse "$input" ;;
    text*)
      exec st -t NVIM -e nvim "$input" ;;
    *pdf*|*epub*|*djvu*)
      exec zathura "$input" ;;
    image*)
      exec imv "$input"      ;;
    video*)
      exec mpv-run "$input"      ;;
    *)
      notify-send "Error with $input"
      exec st -t NVIM -e nvim ~/local/bin/plumber ;;
  esac
fi

printf '%s' "$input" | xcmenu -ic

case "$input" in
    gopher://*)
      exec st -e cgo "$input" ;;
    *.pdf|*.djvu)            
      curl -s "$input" > /tmp/tmp.book
      exec zathura /tmp/tmp.book      ;;
    *.epub)
      curl -s "$input" > /tmp/tmp.book
      pandoc /tmp/tmp.book -o /tmp/tmp.pdf
      exec zathura /tmp/tmp.pdf ;;
    *youtube.com/watch*|*youtu.be*|ytdl*|*livestream.com*|*twitch*|*.mkv|*.mp4|*.webm|*.mpg|*.ogg|*.gifv)                     
      exec mpv-run "$input"                ;;
    *.jpg*|*.png|*.jpeg|*.gif)      
      curl -s "$input" | exec imv -             ;;
    *.tar*)                         
      cd /tmp || exit 0
      curl -s "$input" | tar -xvz
      exec st                          ;;
    *xkcd*)
      curl -s "https://xkcd.com/${input//[^0-9]/}/" | awk '/hotlink/{ print $NF }' | xargs curl | exec imv - ;;
    *imgur.com/gallery/*)
      exec mpv-run "$input"                         ;;
    http://imgur*)                        
      curl -s http://i.imgur.com/"${input: -7}".png | exec imv - ;;
    *ptpb.pw/t/*)
      exec st -e asciinema play <(curl -s "${input/\/t/}") ;;
    http*)                          
      if curl -I "$input" | grep -e html -e x-empty; then
        exec browse "$input" 
      else
        tmp="$(mktemp)"
        curl -s "$input" > "$tmp" 
        exec plumber "$tmp"
      fi ;;
    *\(*)  
        exec "$XDG_DATA_HOME"/dsearch/man "${input%\(*}"      ;;
    *)
      if grep "$input" <<< "$(apropos .)"; then
        exec "$XDG_DATA_HOME"/dsearch/man "$input"
      else
        exec browse "!g%20$input"
      fi ;;
esac
