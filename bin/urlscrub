#!/usr/bin/env bash
# Cheapo url spawner for st

readonly optsfile=$XDG_CONFIG_HOME/dmenu/dmenucolors

# https://github.com/mvdan/xurls
# https://github.com/Cloudef/bemenu
# Currently strips newlines as well

tmp=$(mktemp)

menu() {
    tac | dmenu -l 10 "${opts[@]}" -p URLs
}

url_scrub() {
    local item
    tee $tmp | tr -d "[:cntrl:]" | xurls | while read -r item; do
        case "$item" in
            *http://*|*https://*) sed 's/^.*\(http.*$\)/\1/' <<< "$item" ;;
            (file*)               sed 's|file://||'          <<< "$item" ;;
            *)                    printf '%s\n' "$item"                  ;;
        esac
    done
	cat "$tmp" | xurls

}

handle() {
  local selection
  while read -r selection; do
    plumber "$selection" 
  done
  rm "$tmp"
}

[[ -s $optsfile ]] && source "$optsfile"
url_scrub "$@" | sort -ru | menu | handle
