#!/usr/bin/env bash
# Requires https://github.com/wmutils

screen_dimensions() {
   dispid=$(lsw -r)
   printf '%s %s\n' "$(wattr w "$dispid")" "$(wattr h "$dispid")"
}

list_windows() {
   local wname
   while read -r id; do
      wname=$(xwininfo -id "$id" | awk '/Window id:/{print $NF}')
      [[ ! $wname ]] && break
      case ${wname//\"/} in
        *.pdf|*.epub|*.djvu|Zathura|NVIM|name\)|w3m)
            wname="$(wattr w "$id") $(( 2 + $(wattr h "$(lsw -r)") / 2 )) $(wattr w "$id") $(wattr h "$(lsw -r)") $id" ;;
         abduco)
           wname="400 228 450 257 $id" ;;
         mpv)
           # We want our movies to take up as much space as they can!
           wname="$(wattr w "$id") $(wattr h "$id") $(wattr w "$(lsw -r)") $(wattr h "$(lsw -r)") $id" ;;
          float) break ;;
         *)
           wname="400 228 450 $(( $(wattr h "$(lsw -r)") / 2 )) $id" ;;
      esac  
      printf '%s\n' "$wname"
   done
}

declare width heigh

source "$XDG_CONFIG_HOME"/wmutils/size

[[ ! $width && $heigh ]] && exit 1

## Main ##
lsw | list_windows | ~/local/cfg/wmutils/bin_pack -x "$width" -y "$heigh" -g 15 | while read -r x y w h wid; do
  wtp "$x" "$y" "$w" "$h" "$wid"
done
