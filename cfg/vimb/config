set editor-command=nvim-run %s
set spell-checking=true

set minimumfontsize=9.5
set monofontsize=9.5
set fontsize=9.5

set cursivfont=DejaVu Serif 9.5
set defaultfont=DejaVu Sans 9.5
set monofont=DejaVu Sans Mono 9.5
set sansfont=DejaVu Sans 9.5
set seriffont=DejaVu Serif 9.5

set hintkeys=aoeuhtns
set home-page=https://www.google.com

set completion-bg-active=#444444
set completion-fg-active=#bcbcbc
set completion-bg-normal=#262626
set completion-fg-normal=#bcbcbc
set completion-font=DejaVu Sans Mono 9.5

set input-bg-normal=#262626
set input-fg-normal=#bcbcbc
set input-bg-error=#262626
set input-fg-error=#bcbcbc
set input-font-normal=DejaVu Sans Mono 9.5
set input-font-error=DejaVu Sans Mono 9.5

set input-autohide=true
set statusbar=false
set caret=true
set auto-shrink-images=true

handler-add gopher=plumber %s

set x-hint-command=:sh! ~/local/bin/plumber <C-R>; <CR>
aug whitelistjs
  au LoadCommited * set scripts=off|set cookie-accept=never
  au LoadCommited https://www.facebook.com/* set scripts=on
  au LoadCommited https://*google.com/* set scripts=on|set cookie-accept=always
  au LoadCommited https://gist* set scripts=on
  au LoadCommited https://github.com/* set scripts=on
  au LoadCommited https://www.reddit.com/* set scripts=on
  au LoadCommited http://*tt-rss/* set scripts=on
  au LoadCommited https://www.acm.org/* set scripts=on
  au LoadCommited https://ptpb.pw/t/* set scripts=on
  au LoadCommited https://*muut* set scripts=on|set cookie-accept=always
  au LoadCommited http://192.168.* set scripts=on|set cookie-accept=always
  au LoadCommited http://127.0.0.1* set scripts=on
  au LoadCommited http://teamcool.net/* set scripts=on

aug end
nmap <F1> :eval! simplyread()<CR>
